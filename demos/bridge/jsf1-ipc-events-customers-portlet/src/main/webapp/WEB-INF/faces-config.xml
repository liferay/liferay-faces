<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<application>
		<message-bundle>i18nFaces</message-bundle>
		<resource-bundle>
			<base-name>i18n</base-name>
			<var>i18n</var>
		</resource-bundle>
		<view-handler>com.liferay.faces.bridge.application.ViewHandlerFaceletImpl</view-handler>
	</application>
	<managed-bean>
		<managed-bean-name>bookingService</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.service.BookingServiceMockImpl</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bookingTypeService</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.service.BookingTypeServiceMockImpl</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>customersBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.CustomersBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>customersViewBean</property-name>
			<value>#{customersViewBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>customersModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.CustomersModelBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>customerService</property-name>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>customersViewBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.CustomersViewBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>customerService</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.service.CustomerServiceMockImpl</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>bookingService</property-name>
			<value>#{bookingService}</value>
		</managed-property>
	</managed-bean>
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
	</lifecycle>
</faces-config>
