<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd" version="1.2">

	<application>
		<message-bundle>i18nFaces</message-bundle>
		<resource-bundle>
			<base-name>i18n</base-name>
			<var>i18n</var>
		</resource-bundle>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>applicantBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.ApplicantBackingBean</managed-bean-class>
		<!-- ICEfaces Extended Request Scope -->
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>applicantModelBean</property-name>
			<value>#{applicantModelBean}</value>
		</managed-property>
		<managed-property>
			<property-name>listModelBean</property-name>
			<value>#{listModelBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>applicantModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.ApplicantModelBean</managed-bean-class>
		<!-- ICEfaces Extended Request Scope -->
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>listModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.ListModelBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>portletPreferencesBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.PortletPreferencesBackingBean</managed-bean-class>
		<!-- ICEfaces Extended Request Scope -->
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/views/confirmation.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>submit-another-application</from-outcome>
			<to-view-id>/views/portletViewMode.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/views/portletViewMode.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/confirmation.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
