	<jsp:directive.page contentType="text/html" pageEncoding="UTF-8" />
	<f:view>
		<h:messages />
		<h:form>
			<!-- Test JSF 2 Flash scope -->
			<h:outputText value="#{i18n['dear']} #{bridgeFlash['firstName']}," />
