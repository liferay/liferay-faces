<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	xmlns:util="http://www.liferay.com/xml/ns/liferay-faces-util-extension">

	<application>
		<view-handler>com.liferay.faces.bridge.application.PortletFaceletViewHandler</view-handler>
	</application>
	<converter>
		<converter-id>com.liferay.faces.demos.converter.CountryGmapConverter</converter-id>
		<converter-class>com.liferay.faces.demos.converter.CountryGmapConverter</converter-class>
	</converter>
	<converter>
		<converter-id>com.liferay.faces.demos.converter.CountryConverter</converter-id>
		<converter-class>com.liferay.faces.demos.converter.CountryConverter</converter-class>
	</converter>
	<factory>
		<factory-extension>
			<util:message-context-factory>com.liferay.faces.demos.context.ShowcaseMessageContextFactory</util:message-context-factory>
		</factory-extension>
	</factory>
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
		<!-- <phase-listener>com.liferay.faces.util.lifecycle.ViewScopePhaseListener</phase-listener> -->
	</lifecycle>
	<managed-bean>
		<managed-bean-name>bridgeInputFileBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.BridgeInputFileBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>bridgeInputFileModelBean</property-name>
			<value>#{bridgeInputFileModelBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bridgeInputFileModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.BridgeInputFileModelBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commandBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.CommandBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>compatBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.CompatBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>converterModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.ConverterModelBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>countryService</property-name>
			<value>#{countryService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>countryService</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.service.CountryServiceMockImpl</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>customerService</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.service.CustomerServiceMockImpl</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>countryService</property-name>
			<value>#{countryService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputEditorBacking</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.InputEditorBacking</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>dataTableBacking</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.DataTableBacking</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>customerService</property-name>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputTextModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.InputTextModelBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>jSTLBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.JSTLBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>selectOneBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.SelectOneBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>selectOneModelBean</property-name>
			<value>#{selectOneModelBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>selectOneModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.SelectOneModelBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>liferayBenefitService</property-name>
			<value>#{liferayBenefitService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>setPropertyActionListenerBackingBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.SetPropertyActionListenerBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>validationModelBean</managed-bean-name>
		<managed-bean-class>com.liferay.faces.demos.bean.ValidationModelBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<validator>
		<validator-id>com.liferay.faces.demos.validator.EmailValidator</validator-id>
		<validator-class>com.liferay.faces.demos.validator.EmailValidator</validator-class>
	</validator>

</faces-config>
