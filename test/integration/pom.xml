<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.liferay.faces.test</groupId>
		<artifactId>liferay-faces-test</artifactId>
		<version>3.2.2-ga3-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>com.liferay.faces.test.integration</groupId>
	<artifactId>liferay-faces-test-integration</artifactId>
	<packaging>pom</packaging>
	<name>Liferay Faces Test Integration</name>

	<modules>
		<module>util</module>
		<module>demos</module>
		<module>issues</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.junit</groupId>
			<artifactId>arquillian-junit-container</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.graphene</groupId>
			<artifactId>graphene-webdriver</artifactId>
			<type>pom</type>
		</dependency>
	</dependencies>

	<properties>
		<integration.portal>liferay</integration.portal>
		<integration.host>localhost</integration.host>
		<integration.port>8080</integration.port>
		<integration.url>http://${integration.host}:${integration.port}</integration.url>
	</properties>

	<profiles>
		<profile>
			<id>pluto</id>
			<properties>
				<integration.portal>pluto</integration.portal>
			</properties>
		</profile>
		<profile>
			<id>integration</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<skipTests>false</skipTests>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>weblogic</id>
			<properties>
				<integration.port>7001</integration.port>
			</properties>
		</profile>
		<profile>
			<id>websphere</id>
			<properties>
				<integration.port>9080</integration.port>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<systemProperties>
							<property>
								<name>integration.portal</name>
								<value>${integration.portal}</value>
							</property>
							<property>
								<name>integration.url</name>
								<value>${integration.url}</value>
							</property>
						</systemProperties>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>

