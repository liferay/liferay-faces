<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.liferay.faces.test</groupId>
		<artifactId>liferay-faces-test</artifactId>
		<version>3.1.3-ga4-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>liferay-faces-test-bridge-tck</artifactId>
	<packaging>pom</packaging>
	<name>Liferay Faces Test Bridge TCK</name>

	<modules>
		<module>bridge-tck-compat</module>
		<module>bridge-tck-lifecycle-set-portlet</module>
		<module>bridge-tck-main-portlet</module>
		<module>bridge-tck-render-policy1-portlet</module>
		<module>bridge-tck-render-policy2-portlet</module>
		<module>bridge-tck-render-policy3-portlet</module>
		<module>bridge-tck-response-wrapper-portlet</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>${faces.group.id}</groupId>
			<artifactId>${faces.api.artifact.id}</artifactId>
			<version>${faces.version}</version>
		</dependency>
		<dependency>
			<groupId>${faces.group.id}</groupId>
			<artifactId>${faces.impl.artifact.id}</artifactId>
			<version>${faces.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>glassfish</id>
			<dependencies>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.api.artifact.id}</artifactId>
					<version>${faces.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.impl.artifact.id}</artifactId>
					<version>${faces.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>jboss</id>
			<dependencies>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.api.artifact.id}</artifactId>
					<version>${faces.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.impl.artifact.id}</artifactId>
					<version>${faces.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>weblogic</id>
			<dependencies>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.api.artifact.id}</artifactId>
					<version>${faces.version}</version>
					<scope>provided</scope>
				</dependency>
				<!-- FACES-1595: For JSP, the jsf-impl.jar artifact must appear in both the global classpath and WEB-INF/lib -->
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.impl.artifact.id}</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
					<version>${weblogic.xerces.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>websphere</id>
			<dependencies>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.api.artifact.id}</artifactId>
					<version>${faces.version}</version>
				</dependency>
				<dependency>
					<groupId>${faces.group.id}</groupId>
					<artifactId>${faces.impl.artifact.id}</artifactId>
					<version>${faces.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>
