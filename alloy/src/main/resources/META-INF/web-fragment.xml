<?xml version="1.0" encoding="UTF-8"?>

<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_2_5.xsd" version="2.5">

	<!-- Enable <audio> and <video> HTML5 passthrough elements by specifying the Liferay Faces AlloyTagDecorator. -->
	<context-param>
		<param-name>javax.faces.FACELETS_DECORATORS</param-name>
		<param-value>com.liferay.faces.alloy.tagdecorator.internal.TagDecoratorAlloyImpl</param-value>
	</context-param>
</web-fragment>
